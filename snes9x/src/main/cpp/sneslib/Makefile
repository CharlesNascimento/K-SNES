	./offsets >$(srcdir)/$(CPU)/offsets.h #FIXME: Move to builddir

snes9x: $(OBJECTS) unix/x11.o $(AIDOOBJS)
	$(CCC) $(INCLUDES) -o $@ $(OBJECTS) $(AIDOOBJS) $(GLIDEOBJS) $(OPENGLOBJS) unix/x11.o $(LDLIBS) $(GLIDELIBS) $(OPENGLLIBS)  -lz -L/usr/lib -lX11 -lXext -lnsl  -lX11 -lXext -lXext -lX11 $(EXTRALIBS) -lm

